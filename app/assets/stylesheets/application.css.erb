.shadow {
    background-color: #fff; /* Needed for IEs */
-moz-box-shadow: 5px 5px 15px #222;
-webkit-box-shadow: 5px 5px 15px #222;
box-shadow: 5px 5px 15px #222;
filter: progid:DXImageTransform.Microsoft.Blur(PixelRadius=7,MakeShadow=true,ShadowOpacity=0.10);
        -ms-filter: "progid:DXImageTransform.Microsoft.Blur(PixelRadius=7,MakeShadow=true,ShadowOpacity=0.10)";
        zoom: 1;
}
.shadow .content {
  position: relative; /* This protects the inner element from being blurred */
  background-color: #fff;
}

.shadowlight {
    background-color: #fff; /* Needed for IEs */
-moz-box-shadow: 5px 5px 15px #ccc;
-webkit-box-shadow: 5px 5px 15px #ccc;
box-shadow: 5px 5px 15px #ccc;
filter: progid:DXImageTransform.Microsoft.Blur(PixelRadius=7,MakeShadow=true,ShadowOpacity=0.10);
        -ms-filter: "progid:DXImageTransform.Microsoft.Blur(PixelRadius=7,MakeShadow=true,ShadowOpacity=0.10)";
        zoom: 1;
}
.shadowlight .content {
        position: relative; /* This protects the inner element from being blurred */
        background-color: #fff;
}

.smallshadow {
-moz-box-shadow: 2px 2px 3px #ccc;
-webkit-box-shadow: 2px 2px 3px #ccc;
border-style: solid;
border-width: 1px;

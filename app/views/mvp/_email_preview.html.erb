<% @email_subject = @stack.question %>

<div class="email_preview">
<%= form_tag "/share_with_neighbor" do -%>
<table>
  <tr>
	<td style="text-align: right;"><label for="contact_from_name">Your&nbsp;Name:</label></td>
	<td><%= text_field "contact", "from_name", :size => "40" %> via StkUp
	</td>
  </tr>
  <tr>
	<td style="text-align: right;"><label for="contact_user_email">Your&nbsp;Email:</label></td>
	<td><%= text_field "contact", "user_email", :size => "50", :style => "color:lightgray",
		:value => 'you@example.com',
		:onfocus => "this.style.color = 'black'" %>
	</td>
  </tr>
  <tr>
	<td style="text-align: right;"><label for="contact_email">To:</label></td>
	<td>
		<%= text_field "contact", "email", :size => "50", :style => "color:lightgray",
		:value => "neighbor@example.com", :id => "prefill",
		:onfocus => "if (this.value == 'neighbor@example.com') {this.value='';this.style.color = 'black'}" %>
	</td>
  </tr>
  <tr>
	<td style="text-align: right;"><label for="contact_subject">Subject:</label></td>
	<td><%= text_field "contact", "email_subject", :size => "50", :value => @email_subject %></td>
  </tr>
	<tr>
	<td class="top_right"><label for="comment_body">Message:</label></td>
	<td><%= text_area "contact", "message", :size => "30x8", :value => @message %>
		<div class="inactive text-75">followed by the question:</div>
		<div class="field">
		<label for="response_value"><%= @stack.question %></label>
		</div>
	</td>
  </tr>
  <tr>
	<td></td>
	<td class="text-1_25"><input type="submit" value="Share with Neighbor" class="form_button round" /></td>
  </tr>
</table>

<% end -%>

</div>
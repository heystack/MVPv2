<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "xhtml11.dtd">
<html>
<head>
  <title>Purposeful Comparisons | StkUp</title>
  <link rel="shortcut icon" href="/favicon.ico" >
  <%= render 'layouts/js' %>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>

  <!-- Google Analytics -->
  <!-- TODO: Add Google Analytics with MVPv2 snippet -->
</head>
<body>
  <div class="container round shadow">
	<!--[if IE]><div class="content round"><![endif]-->
	<section class="round">
      <%= render 'shared/header' %>
	  <% flash.each do |key, value| %>
	    <div class="flash <%= key %>"><%= value %></div>
	  <% end %>
	  <%= yield %>
	</section>
	<!--[if IE]></div><![endif]-->
  </div>
  <% if signed_in? && current_user.admin? %>
  <%= link_to "Sign out", signout_path, :method => :delete %>
  <% else %>
  <%= link_to "Sign in", signin_path %>
  <% end %>
  <%= debug(params) if Rails.env.development? %>
  <%= session.inspect if Rails.env.development? %>
  <%= current_user.inspect if Rails.env.development? %>
</body>
</html>

<div class="email_preview">
<%= form_tag "/send_comment" do -%>
<table>
  <tr>
	<td style="text-align: right;"><label for="contact_email">Your&nbsp;Email:</label></td>
	<td>
		<%= text_field "contact", "from_email", :size => "50", :style => "color:lightgray",
		:value => current_user.email.blank? ? session[:email] : current_user.email,
		:onfocus => "this.style.color = 'black'" %></td>
  </tr>
  <tr>
	<td class="top_right"><label for="comment_body">Comment:</label></td>
	<td><%= text_area "contact", "comment" %>
	</td>
  </tr>
  <tr>
	<td></td>
	<td class="text-1_25"><br/><input type="submit" value="Send Comment" class="form_button round" /></td>
  </tr>
</table>

<% end -%>

</div>